								itemLabel="#{pessoa.nome}" itemValue="#{pessoa.id}"/>
				</h:selectOneMenu>
				
				<h:outputLabel value="Previsão de Término:" for="dataPrevisaoFim" />
				<h:inputText id="dataPrevisaoFim" value="#{projetoBean.projeto.dataPrevisaoFim.time}">
					<f:convertDateTime pattern="dd/MM/yyyy" timeZone="America/Sao_Paulo" />
				</h:inputText>
					
				<h:outputLabel value="Data Real de Término:" for="dataFim" />
				<h:inputText id="dataFim" value="#{projetoBean.projeto.dataFim.time}">
					<f:convertDateTime pattern="dd/MM/yyyy" timeZone="America/Sao_Paulo" />
				</h:inputText>
				
				<h:outputLabel value="Orçamento Total:" for="orcamento" />
				<h:inputText id="orcamento" value="#{projetoBean.projeto.orcamento}"/>
				<h:outputLabel value="Descrição:" for="descricao" />
				<h:inputText id="descricao" value="#{projetoBean.projeto.descricao}"/>
				<h:outputLabel value="Status:" for="status" />
				<h:selectOneMenu>
					<f:selectItem itemLabel="Selecione" />
					<f:selectItem itemLabel="iniciado"  value="#{proejtoBean.projeto.status}"/>
					<f:selectItem itemLabel="Em andamento"  value="#{proejtoBean.projeto.status}"/>
					<f:selectItem itemLabel="Encerrado"  value="#{proejtoBean.projeto.status}"/>
				</h:selectOneMenu>
				<h:outputLabel value="Risco:" for="risco" />
				<h:selectOneMenu>
					<f:selectItem itemLabel="Selecione" />
